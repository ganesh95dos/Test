ganesh@ganesh-VMware-Virtual-Platform:~/Downloads/ganesh/terraform-eks-cluster$ cat argocd-lb-service.yaml 
apiVersion: v1
kind: Service
metadata:
  name: argocd-server
  namespace: argocd
  labels:
    app.kubernetes.io/name: argocd-server
spec:
  type: LoadBalancer
  selector:
    app.kubernetes.io/name: argocd-server
  ports:
    - name: https
      port: 443
      targetPort: 8080


apply argocd
kubectl apply -f argocd-lb-service.yaml
kubectl get svc argocd-server -n argocd -w
